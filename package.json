{
  "name": "z-reader",
  "displayName": "z-reader",
  "description": "用来摸鱼或学习的小说阅读插件,支持在线搜索和本地阅读,支持txt和epub格式",
  "keywords": [
    "epub",
    "reader",
    "阅读",
    "小说",
    "摸鱼"
  ],
  "publisher": "aooiu",
  "license": "MIT",
  "version": "1.1.16",
  "icon": "static/images/icon-green.png",
  "qna": "https://github.com/aooiuu/z-reader.git/issues",
  "bugs": {
    "url": "https://github.com/aooiuu/z-reader.git/issues",
    "email": "aooiu@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aooiuu/z-reader.git"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "z-reader.command.refresh",
        "title": "本地",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.searchOnline",
        "title": "在线",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.openLocalDirectory",
        "title": "打开本地文件目录",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.setOnlineSite",
        "title": "更改在线网站来源",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.setEncoding",
        "title": "设置编码",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.setChapterOrder",
        "title": "设置章节显示顺序",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.collectList",
        "title": "收藏",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.editCollectList",
        "title": "编辑收藏列表",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.collectBook",
        "title": "收藏本书",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.cancelCollect",
        "title": "取消收藏",
        "category": "z-reader"
      },
      {
        "command": "z-reader.command.clearCollect",
        "title": "清空收藏",
        "category": "z-reader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "treeView",
          "title": "epub",
          "icon": "static/images/icon.svg"
        }
      ]
    },
    "views": {
      "treeView": [
        {
          "id": "z-reader-menu",
          "name": "Contents(目录)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "z-reader.command.collectList",
          "when": "view == z-reader-menu",
          "group": "navigation@1"
        },
        {
          "command": "z-reader.command.refresh",
          "when": "view == z-reader-menu",
          "group": "navigation@2"
        },
        {
          "command": "z-reader.command.searchOnline",
          "when": "view == z-reader-menu",
          "group": "navigation@3"
        },
        {
          "command": "z-reader.command.openLocalDirectory",
          "when": "view == z-reader-menu",
          "group": "custom@1"
        },
        {
          "command": "z-reader.command.setOnlineSite",
          "when": "view == z-reader-menu",
          "group": "custom@2"
        },
        {
          "command": "z-reader.command.setEncoding",
          "when": "view == z-reader-menu",
          "group": "custom@3"
        },
        {
          "command": "z-reader.command.setChapterOrder",
          "when": "view == z-reader-menu",
          "group": "custom@4"
        },
        {
          "command": "z-reader.command.editCollectList",
          "when": "view == z-reader-menu",
          "group": "custom@5"
        },
        {
          "command": "z-reader.command.clearCollect",
          "when": "view == z-reader-menu",
          "group": "custom@6"
        }
      ],
      "view/item/context": [
        {
          "command": "z-reader.command.openLocalDirectory",
          "when": "view == z-reader-menu && zreader.panel == local",
          "group": "custom-item@1"
        },
        {
          "command": "z-reader.command.setOnlineSite",
          "when": "view == z-reader-menu && zreader.panel == online",
          "group": "custom-item@2"
        },
        {
          "command": "z-reader.command.collectBook",
          "when": "view == z-reader-menu && zreader.panel != collect",
          "group": "custom-item@3"
        },
        {
          "command": "z-reader.command.cancelCollect",
          "when": "view == z-reader-menu && zreader.panel == collect",
          "group": "custom-item@4"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "z-reader",
      "properties": {
        "z-reader.fileDir": {
          "type": "string",
          "description": "本地小说目录"
        },
        "z-reader.onlineSite": {
          "type": "string",
          "default": "起点",
          "enum": [
            "起点",
            "笔趣阁"
          ],
          "description": "在线搜索来源网站"
        },
        "z-reader.encoding": {
          "type": "string",
          "default": "utf8",
          "enum": [
            "utf8",
            "gbk"
          ],
          "description": "txt文件打开编码"
        },
        "z-reader.chapterOrder": {
          "type": "string",
          "default": "顺序",
          "enum": [
            "顺序",
            "倒序"
          ],
          "description": "章节显示顺序"
        },
        "z-reader.readerViewTitle": {
          "type": "string",
          "default": "${name}",
          "markdownDescription": "根据阅读内容控制窗口标题。`${name}`变量可替换为章节标题"
        },
        "z-reader.cookies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "markdownDescription": "`tough.CookieJar.setCookieSync()` 传入的url"
              },
              "cookie": {
                "type": "string",
                "markdownDescription": "`tough.CookieJar.setCookieSync()` 传入的cookie"
              }
            }
          },
          "markdownDescription": "设置cookie, 插件在请求时会根据配置携带cookie"
        }
      }
    }
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/got": "^9.6.12",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.91.0",
    "cheerio": "^1.0.0-rc.12",
    "epub": "^1.2.1",
    "got": "^14.4.1",
    "hpagent": "^1.2.0",
    "iconv-lite": "^0.6.3",
    "mocha": "^10.6.0",
    "open": "^10.1.0",
    "tough-cookie": "^4.1.4",
    "typescript": "^5.5.3",
    "vscode-test": "^1.6.1"
  }
}
